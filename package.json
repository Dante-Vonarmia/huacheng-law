{
  "name": "huacheng-law-portal",
  "version": "1.0.0",
  "description": "华诚律师事务所门户网站改版 - SvelteKit + SCSS 前端重构",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test:lighthouse": "node qa/scripts/lighthouse.js",
    "test:a11y": "node qa/scripts/a11y-check.js",
    "test:seo": "node qa/scripts/seo-check.js",
    "test:all": "npm run test:lighthouse && npm run test:a11y && npm run test:seo"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/dompurify": "^3.0.0",
    "@types/eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "axe-core": "^4.8.0",
    "chrome-launcher": "^1.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "lighthouse": "^11.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "sass": "^1.94.0",
    "svelte": "^5.0.0",
    "svelte-check": "^3.6.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.3"
  },
  "dependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "dompurify": "^3.0.0",
    "isomorphic-dompurify": "^2.0.0",
    "svelte-i18n": "^4.0.0",
    "svelte-inview": "^4.0.2",
    "yup": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Fan Feng",
  "license": "MIT",
  "keywords": [
    "law-firm",
    "sveltekit",
    "scss",
    "typescript",
    "portal",
    "legal"
  ]
}
